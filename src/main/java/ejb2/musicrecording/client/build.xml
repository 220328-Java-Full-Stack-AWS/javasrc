<project name="Music Recording Enterprise Bean" default="build" basedir=".">

	<!-- $Id$ -->

	<property name="src" value="."/>
	<property name="build" value="."/>

	<property file="../build.properties"/>

	<property name="deploy.jar" value="../beans/music.jar"/>

	<target name="init">
		<tstamp/> <!-- Create the time stamp -->
		<mkdir dir="${build}"/> <!-- Create build directory for compile -->
	</target>

	<target name="build" depends="init">
		<javac srcdir="${src}" destdir="${build}"
			classpath=".:${j2ee.jar}:${deploy.jar}:${javacook.jar}"/>
	</target>

</project>
