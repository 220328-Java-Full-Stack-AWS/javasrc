<project name="Meaning of Universe Bean" default="deploy" basedir=".">

	<!-- $Id$ -->

	<property name="src" value="."/>
	<property name="build" value="build"/>
	<property file="../build.properties"/>

	<property name="deploy.jar" value="interfaces.jar"/>
	<property name="src.jar" value="interfaces-src.jar"/>

	<target name="init">
		<tstamp/> <!-- Create the time stamp -->
		<mkdir dir="${build}"/> <!-- Create build directory for compile -->
	</target>

	<target name="build" depends="init">
		<javac srcdir="${src}" destdir="${build}" classpath="${j2ee.jar}"/>
		<copy file="metadata/jndi.properties" todir="${build}"/>
		<mkdir dir="${build}/META-INF"/>
		<copy todir="${build}/META-INF">
			<fileset dir="META-INF"/>
		</copy>
	</target>

	<target name="jar" depends="build">
		<jar jarfile="${build}/${deploy.jar}" basedir="${build}"
		includes="META-INF/*,*.class,*.properties">
		</jar>
	</target>

	<target name="deploy" depends="jar">
		<copy file="${build}/${deploy.jar}" todir="${deploy.dir}"/>
	</target>

	<target name="run" depends="deploy">
		<java classname="Client"
			classpath="${build}:${jboss-client.jar}"/>
	</target>

	<target name="clean">
		<delete dir="${buid}"/>
		<delete file="${src.jar}"/>
	</target>

	<target name="src.jar" depends="clean">
		<jar jarfile="${src.jar}" basedir=".." includes="interfaces/**">
		</jar>
	</target>
</project>
