<project name="Shopping Cart Bean" default="run" basedir=".">

	<!-- $Id$ -->

	<property name="src" value="src"/>
	<property name="build" value="build"/>
	<property file="../build.properties"/>

	<property name="deploy.jar" value="cart.jar"/>
	<property name="src.jar" value="cart-src.jar"/>

	<target name="init">
		<tstamp/> <!-- Create the time stamp -->
		<mkdir dir="${build}"/> <!-- Create build directory for compile -->
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}" classpath="${j2ee.jar}"/>
	</target>

	<target name="copy" depends="init">
		<mkdir dir="${build}/META-INF"/>
		<copy file="metadata/ejb-jar.xml" todir="${build}/META-INF"/>
	</target>

	<target name="jar" depends="compile, copy">
		<jar jarfile="${deploy.jar}" basedir="${build}"/>
	</target>

	<target name="deploy" depends="jar">
		<copy file="${deploy.jar}" todir="${deploy.dir}"/>
		<sleep seconds="5"/>
	</target>

	<target name="run" depends="deploy">
		<java classname="CartClient"
			classpath="${build}:${client.jar}">
		</java>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>

	<target name="src.jar" depends="clean">
		<jar jarfile="${src.jar}" basedir="."/>
	</target>

</project>
