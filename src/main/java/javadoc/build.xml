<project name="JavaDoc demo" default="build" basedir=".">

	<!-- $Id$ -->

	<property name="src" value="."/>
	<property name="build" value="build"/>
	<property file="../build.properties"/>

	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
	</target>

	<target name="build" depends="init">
		<javadoc sourcepath="${src}" destdir="${build}" 
			Author="true" Version="true"
			windowtitle="Demo of Running JavaDoc">
		<fileset file="*.java"/>
		</javadoc>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>
</project>
