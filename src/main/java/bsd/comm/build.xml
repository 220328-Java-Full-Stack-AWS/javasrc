<project name="XXX" default="compile" basedir=".">

	<!-- $Id$ -->

	<property name="src" value="."/>
	<property name="build" value="build"/>
	<property name="build.compiler" value="jikes"/>

	<property name="deploy.dir" value="/home/ian/jboss/jboss/deploy"/>
	<property name="deploy.jar" value="XXX.jar"/>

	<property name="CSRCS" value="bsdcommio.c"/>
	<property name="SOBJS" value="bsdcommio.o"/>
	<property name="SHLIB" value="libbsdcommio.so"/>

	<property name="INCDIR" value="/usr/local/include"/>

	<task name="run">
		<echo message="Here we test the Java code that calls C code."/>
		<java class="TestProg"/>
	</task>


	<target name="init">
		<tstamp/> <!-- Set time stamp variables in case we need 'em-->
		<mkdir dir="${build}"/> <!-- Ensure build directory exists -->
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}"
			deprecation="true"
			includes="TestProg.java"/>
		<javah class="foo"/>
	</target>

	<!--
	 THIS STILL NEEDS TO BE TRANSLATED

	$(SOBJS):	$(CSRCS) BSDSerialPort.h
		$(CC) $(INCLUDES) -c -fpic $(CSRCS)

	$(SHLIB):	$(SOBJS) BSDSerialPort.h
		ld -Bshareable -o $(SHLIB) $(SOBJS)
	 -->

	<target name="jar" depends="compile">
		<jar jarfile="${build}/${deploy.jar}" basedir="${build}"
			includes="META-INF/*,com/**">
		</jar>
	</target>

	<target name="deploy" depends="jar">
		<copy file="${build}/${deploy.jar}" todir="${deploy.dir}"/>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>
</project>
