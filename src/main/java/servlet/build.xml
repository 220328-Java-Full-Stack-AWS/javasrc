<project name="Java Cookbook: Servlet Examples" default="compile" basedir=".">

	<!-- include global build properties -->
	<property file="../build.properties"/>

	<property name="src" value="."/>
	<property name="build" value="."/>

	<!-- specify what to compile. This builds everything -->
	<target name="compile">
		<!-- Compile the java code from ${src} into ${build}.
		 *** failonerror is set false because of 1.4 constructs that will
		 *** fail to compile on 1.3, and a few "expect error here" cases...
		  -->
		<javac srcdir="${src}" destdir="${build}"
			exclude="chartservlet/**"
			failonerror="false"
			classpath="${javacook.jar}:${junit.jar}:${servletapi.jar}:${mail.jar}:${activation.jar}:../${deploy.dir}/spdf.jar"/>
		<javac srcdir="${src/chartservlet" destdir="${build}"
			if="imageio_1.4"
			classpath="${javacook.jar}:${junit.jar}:${servletapi.jar}:${mail.jar}:${activation.jar}:../${deploy.dir}/spdf.jar"/>
		
	</target>

</project>
