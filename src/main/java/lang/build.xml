<project name="Java Cookbook Examples" default="build" basedir=".">

	<!-- include global build properties -->
	<property file="../build.properties"/>

	<property name="src"   value="."/>
	<property name="build" value="."/>

	<target name="build">
		<echo message="Not compiling in language. Use build.failures to try al. TODO move failures out"/>
	</target>

	<!-- specify what to build. This builds everything -->
	<target name="build.failures">
		<!-- Compile the java code from ${src} into ${build}.
		 *** failonerror set false because of 1.4 constructs that will
		 *** won't compile on 1.3, and a few "expect compile error" cases...
		  -->
		<javac srcdir="${src}" destdir="${build}"
			deprecation="true"
			failonerror="false"
			classpath="${javacook.jar}:${junit.jar}"/>
	</target>

</project>
