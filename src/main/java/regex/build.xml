<project name="Java Cookbook Examples" default="compile" basedir=".">

	<!-- include global build properties -->
	<property file="../build.properties"/>

	<property name="src" value="."/>
	<property name="build" value="."/>

	<property name="zipfile" value="regexp-1.4.zip"/>

	<!-- specify what to compile. This builds everything -->
	<target name="compile">
		<echo message="==> Compiling in RE14"/>
		<!-- Compile the java code from ${src} into ${build}.
		 *** failonerror is set false because of 1.4 constructs that will
		 *** fail to compile on 1.3, and a few "expect error here" cases...
		  -->
		<javac srcdir="${src}" destdir="${build}"
			failonerror="false"
			classpath="${javacook.jar}:${junit.jar}"/>
	</target>

	<target name="zip">
		<zip zipfile="${build}/${zipfile}" basedir="."
			includes="**"
			excludes="CVS,${zipfile},*.class,ReaderIter.java,Grep*.java">
		</zip>
	</target>

</project>
