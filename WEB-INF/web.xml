<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<!-- Ian's handy summary (courtesy of the XML parser :-) )
 The content of element type "web-app" must match "(icon?,
 display-name?, description?, distributable?, context-param*,
 filter*, filter-mapping*, listener*, servlet*, servlet-mapping*,
 session-config?, mime-mapping*, welcome-file-list?, error-page*,
 taglib*, resource-env-ref*, resource-ref*, security-constraint*,
 login-config?, security-role*, env-entry*, ejb-ref*, ejb-local-ref*)".
 -->

<web-app>
    <display-name>Ian Darwin's Java Cookbook Downloads</display-name>
    <description>
		This is the downloads from Ian Darwin's Java Cookbook.
		It doubles as the home for findJava.org!
    </description>

	<servlet>
		<servlet-name>DisplayServlet</servlet-name>
		<servlet-class>DisplayServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DisplayServlet</servlet-name>
		<url-pattern>/DisplayServlet</url-pattern>
	</servlet-mapping>

</web-app>
